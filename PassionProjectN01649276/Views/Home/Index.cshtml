@{
    ViewBag.Title = "Home Page";
}

<main>
    <section class="row" aria-labelledby="tourManagementTitle">
        <h1 id="tourManagementTitle">Tour Management System</h1>
        <p class="lead">Manage tours, customers, and bookings with ease using our system.</p>
    </section>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Tours</h2>
                    <p class="card-text">Manage and view all tours offered.</p>
                    <a href="/Tour/List" class="btn btn-primary btn-md">View Tours &raquo;</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Customers</h2>
                    <p class="card-text">Manage customer information and bookings.</p>
                    <a href="/Customer/List" class="btn btn-primary btn-md">View Customers &raquo;</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Bookings</h2>
                    <p class="card-text">Manage bookings for tours.</p>
                    <a href="/Booking/List" class="btn btn-primary btn-md">View Bookings &raquo;</a>
                </div>
            </div>
        </div>
    </div>
</main>