@model PassionProjectN01649276.Models.TourDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h2 class="card-title fw-bold">Are you sure you want to delete this tour?</h2>
                </div>
                <div class="card-body">
                    <h6>Name: @Model.Tourname</h6>
                    <form action="/Tour/Delete/@Model.Tourid" method="POST" class="mt-3">
                        <input type="submit" value="Confirm Delete" class="btn btn-danger me-2" />
                        <a href="/Tour/List" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>