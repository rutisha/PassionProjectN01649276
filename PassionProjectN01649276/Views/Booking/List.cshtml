@model IEnumerable<PassionProjectN01649276.Models.BookingDto>
@{
    ViewBag.Title = "List";
}

<div class="container mt-5">
    <h2 class="mb-4">Booking List</h2>

    <form method="get" action="/Booking/List">
        <div class="input-group mb-3">
            <input type="text" name="searchString" class="form-control" value="@ViewBag.searchString" placeholder="Search by customer name..." />
            <button class="btn btn-primary" type="submit">Search</button>
        </div>
    </form>

    @foreach (var booking in Model)
    {
        <div class="card mb-3">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title">
                    <a href="/Booking/Show/@booking.BookingId" class="text-white">
                        @booking.CustomerName - @booking.TourName
                    </a>
                </h3>
            </div>
            <div class="card-body">
                <div>Date: @booking.Bookingdate</div>
            </div>
        </div>
    }
</div>
