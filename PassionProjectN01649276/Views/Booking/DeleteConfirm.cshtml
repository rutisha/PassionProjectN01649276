@model PassionProjectN01649276.Models.BookingDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h2>Are you sure you want to delete this Booking?</h2>
        </div>
        <div class="card-body">
            <h6>Booking Id: @Model.BookingId</h6>
            <form action="/Booking/Delete/@Model.BookingId" method="POST">
                <div class="form-group">
                    <input type="submit" class="btn btn-danger" value="Confirm Delete" />
                    <a href="/Booking/List" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>


