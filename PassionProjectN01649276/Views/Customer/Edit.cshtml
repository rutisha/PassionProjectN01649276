@model PassionProjectN01649276.Models.CustomerDto
@{
    ViewBag.Title = "Edit";
}

<div class="container mt-5">
    <h2>Edit Customer</h2>
    <form action="/Customer/Update/@Model.CustomerId" method="POST" class="mt-3">
        <input type="hidden" name="CustomerId" value="@Model.CustomerId" />
        <div class="form-group pb-2">
            <label for="CustomerName" class="form-label">Customer Name:</label>
            <input type="text" class="form-control" id="CustomerName" name="CustomerName" value="@Model.CustomerName" />
        </div>
        <div class="form-group pb-2">
            <label for="Email" class="form-label">Email:</label>
            <input type="text" class="form-control" id="Email" name="Email" value="@Model.Email" />
        </div>
        <div class="form-group pb-2">
            <button type="submit" class="btn btn-primary mt-2">Update Customer</button>
            <a href="/Customer/List" class="btn btn-secondary mt-2 ms-2">Cancel</a>
        </div>
    </form>
</div>