@model PassionProjectN01649276.Models.CustomerDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h2>Are you sure you want to delete this Customer?</h2>
        </div>
        <div class="card-body">
            <h6><span class="fw-bold">Name:</span> @Model.CustomerName</h6>
            <form action="/Customer/Delete/@Model.CustomerId" method="POST" class="mt-3">
                <button type="submit" class="btn btn-danger">Confirm Delete</button>
                <a href="/Customer/List" class="btn btn-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>